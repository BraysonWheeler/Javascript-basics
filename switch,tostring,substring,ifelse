let slicedpop;
if(testpopulation.length == 7) {//1 million
    slicedpop = testpopulation.substring(0,1)
    console.log(slicedpop)
}

else if (testpopulation.length == 8) {// 10 milliom
    slicedpop = testpopulation.substring(0,2)
